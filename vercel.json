{
  "functions": {
    "src/app/api/wiki/generate/**": {
      "maxDuration": 300
    },
    "src/app/api/arena/battle/**": {
      "maxDuration": 300
    },
    "src/app/api/trpc/**": {
      "maxDuration": 60
    },
    "src/app/api/webhooks/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
